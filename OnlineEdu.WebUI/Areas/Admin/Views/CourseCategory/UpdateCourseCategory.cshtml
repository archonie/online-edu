@model UpdateCourseCategoryDto
@{
    ViewData["Title"] = "Update Course Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="CourseCategoryId"/>
    <label>Category Name</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />
    <label>Description</label>
    <textarea type="text" asp-for="Description" class="form-control" rows="3"></textarea>
    <br />
    <label>Icon</label>
    <input type="text" asp-for="Icon" class="form-control" />
    <br />
    <label>Show in main page?</label>
    <input type="checkbox" asp-for="IsShown" class="form-check" />
    <br />
    <button class="btn btn-outline-primary">Update</button>
    <button class="btn btn-outline-danger" asp-action="Index">Cancel</button>
</form>
