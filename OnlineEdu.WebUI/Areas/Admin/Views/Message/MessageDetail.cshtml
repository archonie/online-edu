@model ResultMessageDto
@{
    ViewData["Title"] = "Message Detail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<table class="table table-striped table-hover table-bordered">
    <tr>
        <th>Sender Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Sender Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Subject</th>
        <td>@Model.Subject</td>
    </tr>
    <tr>
        <th>Content</th>
        <td>@Model.Content</td>
    </tr>
</table>
<br />
<a asp-action="Index" asp-controller="Message" class="btn btn-outline-primary">Back to Messages</a>
 