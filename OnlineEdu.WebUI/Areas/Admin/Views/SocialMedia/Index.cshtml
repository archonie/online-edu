@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Social Media Page";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{
	int count = 0;
}

<table class="table table-hover">
	<tr>
		<th>#</th>
		<th>Link</th>
		<th>Title</th>
		<th></th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>

			<td> <a href="@item.Url" target="_blank"> <i class="@item.Icon fa-2x"></i></a></td>
			<td>@item.Title</td>
			<td>
				<button onclick="deleteSocialMedia(@item.SocialMediaId)" class="btn btn-outline-danger">Delete </button>
				<a asp-action="UpdateSocialMedia" asp-controller="SocialMedia" asp-area="Admin" asp-route-id="@item.SocialMediaId" class="btn btn-outline-info">Update</a>
			</td>
		</tr>

	}
</table>
<br />

<a asp-action="CreateSocialMedia" asp-controller="SocialMedia" asp-area="Admin" class="btn btn-outline-primary">Create New SocialMedia</a>

<script>


	function deleteSocialMedia(id) {


		Swal.fire({
			title: "Are you sure?",
			text: "You won't be able to revert this!",
			icon: "warning",
			showCancelButton: true,
			confirmButtonColor: "#3085d6",
			cancelButtonColor: "#d33",
			confirmButtonText: "Yes, delete it!",
			cancelButtonText: "Cancel"
		}).then((result) => {
			if (result.isConfirmed) {
				window.location.href = "/Admin/SocialMedia/DeleteSocialMedia/" + id;
			}
		});

	}

</script>

