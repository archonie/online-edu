@model CreateBlogDto

@{
	ViewData["Title"] = "Create Blog";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>CreateBlog</h1>

<form method="post">
	<label>Title</label>
	<input type="text" asp-for="Title" class="form-control" />
	<br />
	<label>Image Url</label>
	<input type="text" asp-for="ImageUrl" class="form-control" />
	<br />
	<label>Category</label>
	<select asp-items="@ViewBag.categories" asp-for="BlogCategoryId" class="form-control">
		<option>Choose Category</option>
	</select>
	<label>Content</label>
	<textarea type="text" asp-for="Content" class="form-control"></textarea>
	<br />
	<button class="btn btn-outline-primary">Save</button>
	<button class="btn btn-outline-danger" asp-action="Index">Cancel</button>

</form>
